@model IEnumerable<AgendaVeterinaria1.Models.Cliente>

@{
    ViewData["Title"] = "Listado Clientes";
}

<h1>Clientes</h1>

<p>
    <a asp-action="Create">Agregar Cliente</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DNI)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DNI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IDCliente"><i class="fa fa-pencil" aria-hidden="true"></i></a> |
               @* <a asp-action="Details" asp-route-id="@item.IDCliente">Details</a> |*@
                <a asp-action="Delete" asp-route-id="@item.IDCliente"><i class="fa fa-trash" aria-hidden="true"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
