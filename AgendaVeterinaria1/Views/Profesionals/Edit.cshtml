@model AgendaVeterinaria1.Models.Profesional

@{
    ViewData["Title"] = "Editar Profesional";
    List<Especialidad> especialidades = ViewBag.Especialidades;
    int? profesional = ViewBag.Id;
}

<h4>@ViewBag.Title</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input asp-for="IDProfesional" value="@profesional" hidden/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Matricula" class="control-label"></label>
                <input asp-for="Matricula" class="form-control" />
                <span asp-validation-for="Matricula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DNI" class="control-label"></label>
                <input asp-for="DNI" class="form-control" />
                <span asp-validation-for="DNI" class="text-danger"></span>
            </div>
            <div class="form-group">
                     <label asp-for="TipoProfesional" class="control-label"> Tipo de Profesional</label>
                    <br />
                    <select asp-for="TipoProfesional" class="browser-default" style="border-bottom:solid #9e9e9e 0.5px">
                        <option value="Veterinaria">Veterinaria</option>
                        <option value="Peluqueria">Peluqueria</option>
                    </select>

                    <span asp-validation-for="TipoProfesional" class="text-danger"></span>
                </div>
                <br />
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
           @* <div class="form-group">
                <label asp-for="Contrasenia" class="control-label"></label>
                <input asp-for="Contrasenia" class="form-control" type="password"/>
                <span asp-validation-for="Contrasenia" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="Especialidades" class="control-label"></label>
                <select asp-for="Especialidades" multiple style="display:block; height:250px;border-bottom:solid #9e9e9e 0.5px">
                @foreach(var item in especialidades){
                    <option value="@item.IDEspecialidad"> @item.Descripcion</option>
                }
                </select>
                <span asp-validation-for="Especialidades" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <br/>
                <a asp-for="Agenda" asp-action="Index" asp-controller="Agenda" class="btn waves-light orange lighten-1"><i class="fa fa-address-book" aria-hidden="true"></i>Ir a la Agenda</a>
            </div>
             <br/>
            <input type="submit" value="Guardar" class="btn btn-primary" />
            <br />
            <br />
            <a asp-action="Index" class="btn btn-primary"><i class="fa fa-arrow-left">&nbsp;</i>Volver</a>

        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
