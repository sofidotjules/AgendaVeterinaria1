@model AgendaVeterinaria1.Models.Agenda

@{
    ViewData["Title"] = "Editar Agenda";
}

<h4>@ViewBag.Title</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IDAgenda" />
            <div class="form-group">
                <label asp-for="FranjaHoraria" class="control-label"></label>
                <input asp-for="FranjaHoraria" class="form-control" />
                <span asp-validation-for="FranjaHoraria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TopeDeTurnos" class="control-label"></label>
                <input asp-for="TopeDeTurnos" class="form-control" />
                <span asp-validation-for="TopeDeTurnos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaDesde" class="control-label"></label>
                <input asp-for="FechaDesde" class="form-control" />
                <span asp-validation-for="FechaDesde" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaHasta" class="control-label"></label>
                <input asp-for="FechaHasta" class="form-control" />
                <span asp-validation-for="FechaHasta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IDProfesional" class="control-label"></label>
                <input asp-for="IDProfesional" class="form-control" />
                <span asp-validation-for="IDProfesional" class="text-danger"></span>
            </div>
            <br />
           <input type="submit" value="Guardar" class="btn btn-primary" />
            <br />
            <br />
            <a asp-action="Index" class="btn btn-primary"><i class="fa fa-arrow-left">&nbsp;</i>Volver</a>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
