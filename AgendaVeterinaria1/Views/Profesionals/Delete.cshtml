@model AgendaVeterinaria1.Models.Profesional

@{
    ViewData["Title"] = "Eliminar Profesional";
    ViewData["Subtitulo"] = "¿Está seguro que quiere eliminar este Profesional?";
}

<h3>@ViewBag.Title</h3>

<h4>@ViewBag.Subtitulo</h4>
<div>
    <hr />
    <dl class="row">
      
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Matricula)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Matricula)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DNI)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DNI)
        </dd>
        <dt class = "col-sm-2">
            Tipo de Profesional
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoProfesional)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IDProfesional" />
        <input type="submit" value="Eliminar Profesional" class="btn red darken-1" />
        <br />
        <br />
        <a asp-action="Index" class="btn btn-primary"><i class="fa fa-arrow-left">&nbsp;</i>Volver</a>
    </form>
</div>
