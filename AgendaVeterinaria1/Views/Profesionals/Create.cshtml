@model AgendaVeterinaria1.Models.Profesional

@{
    ViewData["Title"] = "Agregar Profesional";
    List<Especialidad> especialidades = ViewBag.Especialidades;
}

<h4>@ViewBag.Title</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Matricula" class="control-label"></label>
                <input asp-for="Matricula" class="form-control" />
                <span asp-validation-for="Matricula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DNI" class="control-label"></label>
                <input asp-for="DNI" class="form-control" />
                <span asp-validation-for="DNI" class="text-danger"></span>
            </div>
           
                <div class="form-group">
                     <label asp-for="TipoProfesional" class="control-label"> Tipo de Profesional</label>
                    <br />
                    <select asp-for="TipoProfesional" class="browser-default" style="border-bottom:solid #9e9e9e 0.5px">
                        <option value="Veterinaria">Veterinaria</option>
                        <option value="Peluqueria">Peluqueria</option>
                    </select>

                    <span asp-validation-for="TipoProfesional" class="text-danger"></span>
                </div>
                <br />

           
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contrasenia" class="control-label">Contraseña</label>
                <input asp-for="Contrasenia" class="form-control" type="password"/>
                <span asp-validation-for="Contrasenia" class="text-danger"></span>
            </div>
            <br />
          <input type="submit" value="Guardar" class="btn btn-primary" />
            <br />
            <br />
            <a asp-action="Index" class="btn btn-primary"><i class="fa fa-arrow-left">&nbsp;</i>Volver</a>
        </form>
    </div>
</div>

<div>
    <br/>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
