@model IEnumerable<AgendaVeterinaria1.Models.Profesional>

@{
    ViewData["Title"] = "Profesionales";
}

<h4>Profesionales</h4>

<p>
    <a asp-action="Create">Agregar Profesional</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Matricula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DNI)
            </th>
            <th>
                Tipo de Profesional
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Matricula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DNI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoProfesional)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IDProfesional"><i class="fa fa-pencil" aria-hidden="true"></i></a> |
                @*<a asp-action="Details" asp-route-id="@item.IDProfesional">Detalles</a> |*@
                <a asp-action="Delete" asp-route-id="@item.IDProfesional"><i class="fa fa-trash" aria-hidden="true"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
